<!DOCTYPE html>
<html>
<head>
  <% include ../lib/bootstrap.v4.ejs %>
</head>
<body style="min-width: 1000px;">
  <% include ../header/header.ejs %>
  <div class="container-fluid bg-muted">
    <div class="container">
      <div id="demo" class="carousel slide pt-4" data-ride="carousel">
      <!-- 指示符 -->
      <ul class="carousel-indicators">
        <li data-target="#demo" data-slide-to="0" class="active"></li>
        <li data-target="#demo" data-slide-to="1"></li>
        <li data-target="#demo" data-slide-to="2"></li>
      </ul>
      <!-- 轮播图片 -->
      <div class="carousel-inner">
        <div class="carousel-item active">
          <img style="width: 100vw;height: 400px;min-width: 1000px;" src="https://static.runoob.com/images/mix/img_fjords_wide.jpg">
        </div>
        <div class="carousel-item">
          <img style="width: 100vw;height: 400px;min-width: 1000px;" src="https://static.runoob.com/images/mix/img_nature_wide.jpg">
        </div>
        <div class="carousel-item">
          <img style="width: 100vw;height: 400px;" src="https://static.runoob.com/images/mix/img_mountains_wide.jpg">
        </div>
      </div>
      <!-- 左右切换按钮 -->
      <a class="carousel-control-prev" href="#demo" data-slide="prev">
        <span class="carousel-control-prev-icon"></span>
      </a>
      <a class="carousel-control-next" href="#demo" data-slide="next">
        <span class="carousel-control-next-icon"></span>
      </a>
    </div>
      <h1 class="text-muted pt-2 pb-1">新闻动态</h1>
      <div class="row">
        <div class="col-6">
          <img style="width: 540px;height: 271px;" src="/images/cal1.jpeg" alt="">
        </div>
        <div class="col-6">
          <img style="width: 540px;height: 271px;" src="/images/cal2.png" alt="">
        </div>
      </div>
      <% for(var i = 0;i<newsList.length;i++){ %>
        <hr>
        <a href="/news/singleNews?id=<%=newsList[i].id %>" id="content">
          <div class="row">
            <div class="col-md-9 col-lg-10">
              <h6 class="font-weight-bold"><%=newsList[i].title %></h6>
              <small class="text-muted"><%-newsList[i].content.slice(0,60) %>...</small>
            </div>
            <div class="col-md-3 col-lg-2 text-muted text-right">
              <h4 style="line-height: 67px;"><%=new Date(newsList[i].date).getFullYear()%>-<%=new Date(newsList[i].date).getMonth()+1%>-<%=new Date(newsList[i].date).getDate()%></h4>
            </div>
          </div>
        </a>
      <% } %>
      <hr>
      <div class="row">
        <div class="col">
          <a class="btn btn-primary float-right" style="margin: 10px auto 10px;" href="/news?page=1">更多</a>
        </div>
      </div>
    </div>
  </div>
  <% include ../footer/footer.ejs %>
</body>
</html>